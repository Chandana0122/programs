package com.kodnest;

	public class Main {
	    int a = 10;  // Instance variable with explicit initialization
	    int b;       // Instance variable with implicit default value

	    public void fun() {
	        int x = 20;  // Local variable with initialization
	        int y;       // Local variable without initialization

	        System.out.println("x = " + x);  // x = 20
	        // System.out.println("y = " + y);  // ERROR: local variables must be initialized before use

	        // Instance variables are accessible throughout the class
	        System.out.println("a = " + a);  // a = 10
	        System.out.println("b = " + b);  // b = 0 (default value for integers)
	    }

	    public static void main(String[] args) {
	        Main obj = new Main();

	        // Instance variables are accessible throughout the class
	        System.out.println("a = " + obj.a);  // a = 10
	        System.out.println("b = " + obj.b);  // b = 0
	        
	        obj.fun();

	        // ERROR: Local variables x and y are not accessible outside their method
	        // System.out.println("x = " + x);
	        // System.out.println("y = " + y);
	    }
	}

}
