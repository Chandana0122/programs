interface Player  {
	void play();
	void stop();
	default void pause() {
		System.out.println("playback paused");
	}
	static void reset() {
		System.out.println("player reset to default setting");
	}
}
class Spotify implements Player {
	public void play() {
		System.out.println("play song");
	}
	public void stop() {
		System.out.println("stop song");
	}
}