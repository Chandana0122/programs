package com.arrays;

public class Largest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] a= {1,2,3,4,5,-2,7,8};
		int large=a[0];
			for(int i=1;i<=a.length-1;i=i+1)
			{
				if(large<a[i])
				{
					large=a[i];
				}
			}
			System.out.println(large);

	}

}
